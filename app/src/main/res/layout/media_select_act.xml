<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeActionBarBg"
    android:paddingTop="25dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_media_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cl_media_select_title"
        android:layout_above="@+id/cl_media_select_bottom"
        android:background="?attr/themeListBg"
        android:padding="3dp"/>

    <include
        android:id="@+id/cl_media_select_bottom"
        layout="@layout/media_select_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/fl_folder_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cl_media_select_title"/>

    <include
        android:id="@+id/cl_media_select_title"
        layout="@layout/media_select_title_layout" />

</RelativeLayout>