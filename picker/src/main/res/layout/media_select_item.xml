<?xml version="1.0" encoding="utf-8"?>
<com.wiser.picker.ui.weight.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="#363636">

    <com.wiser.picker.ui.weight.SquaredImageView
        android:id="@+id/iv_media_select_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/media_error"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wiser.picker.ui.weight.SquareFrameLayout
        android:id="@+id/fl_media_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/themeCoverBg"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_media_select_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="3dp"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/media_unselected_num"/>

    <TextView
        android:id="@+id/tv_media_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="00:00"
        android:textColor="#ffffff"
        android:textSize="13sp" />

</com.wiser.picker.ui.weight.SquareFrameLayout>